CREATE TABLE IF NOT EXISTS identité (
nom_candidat VARCHAR(14),
prénom_candidat VARCHAR(14),
ID_candidat CHAR(13),
code_bts CHAR(5)
);

CREATE TABLE IF NOT EXISTS note (
note_obtenu FLOAT(3),
le_coefficient FLOAT(2),
commentaire LONGTEXT, 
date_épreuve SMALLINT,
heure_de_convocation TIME
);

CREATE TABLE IF NOT EXISTS épreuve (
libellé_épreuve_CCF VARCHAR(29), 
libellé_du_BTS VARCHAR(39),
option_du_BTS TEXT(8),
année_scolaire SMALLINT(4),
code_CCF CHAR(5),
la_durée SMALLINT
);


CREATE TABLE IF NOT EXISTS id_prof (
NOM_PROF VARCHAR(14),
PRENOM_PROF VARCHAR(14),
ID_NUMEN CHAR(13),
ID_NUMERO SMALLINT(10),
ID_MAIL CHAR,
ID_TEL SMALLINT(10),
MDP_PROF VARCAR(24)
)
;
